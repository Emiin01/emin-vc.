<script>
  mapboxgl.accessToken = 'pk.eyJ1IjoiZW1pbjEiLCJhIjoiY21lc3k4NnR3MDcyeDJpcXg1YXEzaDcxdyJ9.MqoStsdrQ52rXpOwtQ1wfA';
  const map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/mapbox/dark-v11',
    center: [10, 52],
    zoom: 4.4,
    bearing: 0,
    pitch: 0,
    interactive: false,
    attributionControl: false
  });

  map.on('load', () => {
    const leftPad = window.innerWidth >= 1024 ? 420 : 16;
    map.fitBounds([[-7, 44], [25, 58]], {
      padding: { top: 20, right: 20, bottom: 20, left: leftPad },
      duration: 0
    });

    for (const l of map.getStyle().layers) {
      if (l.type !== 'background') map.setLayoutProperty(l.id, 'visibility', 'none');
    }

    map.addSource('night', {
      type: 'raster',
      tiles: ['https://gibs.earthdata.nasa.gov/wmts/epsg3857/best/VIIRS_Black_Marble/default/2016-01-01/GoogleMapsCompatible_Level8/{z}/{y}/{x}.jpg'],
      tileSize: 256
    });
    map.addLayer({ id:'night', type:'raster', source:'night', paint:{ 'raster-opacity': 0.95 } });

    map.addLayer({
      id: 'country-outline-land',
      type: 'line',
      source: 'composite',
      'source-layer': 'admin',
      filter: ['all', ['==', ['get','admin_level'], 0], ['==', ['get','maritime'], 'false']],
      paint: {'line-color': 'rgba(255,255,255,0.70)','line-width': ['interpolate',['linear'],['zoom'], 3, 0.8, 5, 1.2, 7, 1.8],'line-blur': 0.2}
    });
    map.addLayer({
      id: 'country-outline-coast',
      type: 'line',
      source: 'composite',
      'source-layer': 'admin',
      filter: ['all', ['==', ['get','admin_level'], 0], ['==', ['get','maritime'], 'true']],
      paint: {'line-color': 'rgba(255,255,255,0.55)','line-width': ['interpolate',['linear'],['zoom'], 3, 0.7, 5, 1.0, 7, 1.5],'line-blur': 0.2}
    });

    const city = [6.4428, 51.1805];
    map.addSource('mg', {
      type: 'geojson',
      data: { type:'FeatureCollection', features:[{ type:'Feature', properties:{ name:'MÃ–NCHENGLADBACH' }, geometry:{ type:'Point', coordinates: city } }]}
    });

    map.addLayer({id: 'mg-glow',type: 'circle',source: 'mg',paint: {'circle-radius': ['interpolate',['linear'],['zoom'], 3, 12, 5, 28, 7, 64],'circle-color': 'rgba(255,190,120,0.85)','circle-blur': 0.9,'circle-opacity': 0.38}});
    map.addLayer({id: 'mg-pulse',type: 'circle',source: 'mg',paint: {'circle-radius': 7,'circle-color': 'rgba(255,208,150,1)','circle-opacity': 0.55,'circle-stroke-color': 'rgba(255,230,190,0.9)','circle-stroke-width': 1.1}});
    map.addLayer({id: 'mg-core',type: 'circle',source: 'mg',paint: {'circle-radius': ['interpolate',['linear'],['zoom'], 3, 2.5, 5, 4, 7, 5.5],'circle-color': '#ffd8a0','circle-opacity': 0.95}});
    map.addLayer({id: 'mg-label',type: 'symbol',source: 'mg',layout: {'text-field': ['get','name'],'text-font': ['DIN Offc Pro Medium','Arial Unicode MS Regular'],'text-size': ['interpolate',['linear'],['zoom'], 3, 13, 5, 15, 7, 17],'text-letter-spacing': 0.25,'text-transform': 'uppercase','text-offset': [0, 1.6],'text-anchor': 'top','text-allow-overlap': true},paint: {'text-color': 'rgba(255,210,150,0.98)','text-halo-color': 'rgba(0,0,0,0.9)','text-halo-width': 2.0}});

    const start = Date.now();
    (function animate(){
      const t = (Date.now() - start) / 1000;
      const radius = 6 + Math.sin(t * 2.2) * 3;
      const opacity = 0.30 + (Math.sin(t * 2.2) + 1) * 0.22;
      map.setPaintProperty('mg-pulse','circle-radius', radius);
      map.setPaintProperty('mg-pulse','circle-opacity', opacity);
      requestAnimationFrame(animate);
    })();
  });
</script>
